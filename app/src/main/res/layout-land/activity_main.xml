<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fahadhassan.calculatorplus.MainActivity">

    <EditText
        android:id="@+id/calc_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right|center"
        android:textSize="30sp"
        android:paddingRight="10dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="30"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/operation_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/action_sin"
            style="@style/ActionButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="@string/sin"
            />
        <TextView
            android:id="@+id/action_root"
            style="@style/ActionButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="@string/square_root"
            />

        <TextView
            android:id="@+id/action_clear"
            style="@style/ActionButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="@string/clear"
            />
        <TextView
            android:id="@+id/action_change_sign"
            style="@style/ActionButtonsLand"
            android:text="@string/change_sign"
            />
        <TextView
            android:id="@+id/action_percent"
            style="@style/ActionButtonsLand"
            android:text="@string/percent"
            />
        <TextView
            android:id="@+id/divide"
            style="@style/OperationButtonsLand"
            android:text="@string/divide"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_buttons_row_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/action_cos"
            style="@style/ActionButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="@string/cos"
            />
        <TextView
            android:id="@+id/action_squared"
            style="@style/ActionButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="@string/squared"
            />


        <TextView
            android:id="@+id/one"
            style="@style/NumberButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="1"
            />
        <TextView
            android:id="@+id/two"
            style="@style/NumberButtonsLand"
            android:text="2"
            />
        <TextView
            android:id="@+id/three"
            style="@style/NumberButtonsLand"
            android:text="3"
            />
        <TextView
            android:id="@+id/multiply"
            style="@style/OperationButtonsLand"
            android:text="@string/multiply"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_buttons_row_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_tan"
            style="@style/ActionButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="@string/tan"
            />
        <TextView
            android:id="@+id/action_cubed"
            style="@style/ActionButtonsLand"
            android:text="@string/cubed"
            />

        <TextView
            android:id="@+id/four"
            style="@style/NumberButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="4"
            />
        <TextView
            android:id="@+id/five"
            style="@style/NumberButtonsLand"
            android:text="5"
            />
        <TextView
            android:id="@+id/six"
            style="@style/NumberButtonsLand"
            android:text="6"
            />
        <TextView
            android:id="@+id/subtract"
            style="@style/OperationButtonsLand"
            android:text="@string/subtract"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_buttons_row_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_pi"
            style="@style/ActionButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="@string/pi"
            />
        <TextView
            android:id="@+id/action_natural_log"
            style="@style/ActionButtonsLand"
            android:text="@string/ln"
            />
        <TextView
            android:id="@+id/seven"
            style="@style/NumberButtonsLand"

            android:text="7"
            />
        <TextView
            android:id="@+id/eight"
            style="@style/NumberButtonsLand"
            android:text="8"
            />
        <TextView
            android:id="@+id/nine"
            style="@style/NumberButtonsLand"
            android:text="9"
            />
        <TextView
            android:id="@+id/add"
            style="@style/OperationButtonsLand"
            android:text="@string/add"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_buttons_row_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/action_e"
            style="@style/ActionButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="@string/e"
            />
        <TextView
            android:id="@+id/action_log_base10"
            style="@style/ActionButtonsLand"
            android:text="@string/log10"
            />


        <TextView
            android:id="@+id/zero"
            android:layout_weight="2"
            style="@style/NumberButtonsLand"
            android:text="0"
            />
        <TextView
            android:id="@+id/decimal"
            style="@style/NumberButtonsLand"
            android:layout_below="@+id/calc_text"
            android:text="."
            />

        <TextView
            android:id="@+id/equals"
            style="@style/OperationButtonsLand"
            android:text="="
            />
    </LinearLayout>

    </LinearLayout>



</LinearLayout>
